<h1>Cursos <a href="/curso/create/" class="btn btn-light">+</a></h1>

<table class="table table-hover">
                <thead>
                  <tr class="table-primary">
                    <th scope="col">Sigla</th>
                    <th scope="col">Nome</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                    <tr class="table-secondary"></tr>
                        <td>{{sigla}}</td>
                        <td>{{nome}}</td>
                        <td class="options"> 
                            <a href="/curso/{{id}}"><i class="far fa-eye"></i></a> 
                            <a href="/curso/update/{{id}}"><i class="fas fa-pen"></i></a>
                            <a href="/curso/delete/{{id}}"><i class="far fa-trash-alt"></i></a> 
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
              </table>